<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_car"
    tools:context=".ConnectDeviceActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:text="BMW X6"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonBluetoothDisconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_baseline_bluetooth_disabled_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="230dp"
        android:layout_height="176dp"
        android:layout_marginBottom="84dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/car_connect" />

    <ImageView
        android:id="@+id/imageViewIzquierda"
        android:layout_width="28dp"
        android:layout_height="24dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/izquierda" />

    <ImageView
        android:id="@+id/imageViewDerecha"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:srcCompat="@drawable/derecha" />

    <ImageView
        android:id="@+id/imageViewFrenar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.345"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/freno"
        tools:layout_editor_absoluteY="85dp" />

    <ImageView
        android:id="@+id/imageViewAcelerar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewFrenar"
        app:layout_constraintStart_toEndOf="@+id/imageViewFrenar"
        app:layout_constraintTop_toTopOf="@+id/imageViewFrenar"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/acelerador" />

    <ImageView
        android:id="@+id/imageViewVoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewAcelerar"
        app:layout_constraintStart_toEndOf="@+id/imageViewAcelerar"
        app:layout_constraintTop_toTopOf="@+id/imageViewAcelerar"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/microfono" />

</androidx.constraintlayout.widget.ConstraintLayout>